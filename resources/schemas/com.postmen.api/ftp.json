{
  "$id": "/ftp",
  "$schema": "http://json-schema.org/draft-06/schema#",
  "title": "FTP",
  "type": "object",
  "description": "FTP credentials object",
  "properties": {
    "url": {
      "type": "string",
      "description": "protocol://domain + port + path"
    },
    "username": {
      "type": "string",
      "description": "username for ftp upload"
    },
    "password": {
      "type": "string",
      "description": "password for ftp upload"
    }
  },
  "additionalProperties": false,
  "required": [
    "url",
    "username",
    "password"
  ]
}